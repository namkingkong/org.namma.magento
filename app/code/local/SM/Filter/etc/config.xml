<?xml version="1.0"?>
<config>
    <modules>
        <SM_Filter>
            <version>1.0.0</version>
        </SM_Filter>
    </modules>
    <global>
        <helpers>
            <sm_filter>
                <class>SM_Filter_Helper</class>
            </sm_filter>
        </helpers>
        <blocks>
            <sm_filter>
                <class>SM_Filter_Block</class>
            </sm_filter>
        </blocks>
        <models>
            <sm_filter>
                <class>SM_Filter_Model</class>
            </sm_filter>
        </models>
        <resources>
            <sm_filter_setup>
                <setup>
                    <module>SM_Filter</module>
                    <class>Mage_Eav_Model_Entity_Setup</class>
                </setup>
            </sm_filter_setup>
        </resources>
        <events>
            <adminhtml_catalog_product_attribute_edit_prepare_form>
                <observers>
                    <formfield_add>
                        <class>SM_Filter_Model_Observer_Adminhtml_CatalogAttributeObserver</class>
                        <method>addAttributeManagementFormField</method>
                    </formfield_add>
                </observers>
            </adminhtml_catalog_product_attribute_edit_prepare_form>
        </events>
    </global>
    <frontend>
        <layout>
            <updates>
                <sm_filter>
                    <file>SM/Filter.xml</file>
                </sm_filter>
            </updates>
        </layout>
    </frontend>
</config>