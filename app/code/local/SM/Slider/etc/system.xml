<?xml version="1.0"?>
<config>
    <sections>
        <sm_slider translate="label" module="sm_slider">
            <label>SM Slider Configuration</label>
            <tab>sm_modules</tab>
            <frontend_type>text</frontend_type>
            <show_in_default>1</show_in_default>
            <show_in_website>1</show_in_website>
            <show_in_store>1</show_in_store>
            <groups>
                <status translate="label" module="sm_slider">
                    <label>Status Configuration</label>
                    <sort_order>1</sort_order>
                    <frontend_type>text</frontend_type>
                    <expanded>1</expanded>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <enabled translate="label" module="sm_slider">
                            <label>Enabled</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </enabled>
                    </fields>
                </status>
                <display translate="label" module="sm_slider">
                    <label>Display Configuration</label>
                    <sort_order>2</sort_order>
                    <frontend_type>text</frontend_type>
                    <expanded>1</expanded>
                    <show_in_default>1</show_in_default>
                    <show_in_website>1</show_in_website>
                    <show_in_store>1</show_in_store>
                    <fields>
                        <autoplay translate="label" module="sm_slider">
                            <label>Autoplay</label>
                            <comment><![CDATA[This is the delay between each slide]]></comment>
                            <sort_order>1</sort_order>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </autoplay>
                        <speed translate="label" module="sm_slider">
                            <label>Speed</label>
                            <sort_order>3</sort_order>
                            <comment><![CDATA[Milisecond]]></comment>
                            <frontend_type>text</frontend_type>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </speed>
                        <mode translate="label" module="sm_slider">
                            <label>Mode</label>
                            <sort_order>4</sort_order>
                            <frontend_type>select</frontend_type>
                            <source_model>sm_slider/system_config_source_sliderMode</source_model>
                            <show_in_default>1</show_in_default>
                            <show_in_website>1</show_in_website>
                            <show_in_store>1</show_in_store>
                        </mode>
                    </fields>
                </display>
            </groups>
        </sm_slider>
    </sections>
</config>