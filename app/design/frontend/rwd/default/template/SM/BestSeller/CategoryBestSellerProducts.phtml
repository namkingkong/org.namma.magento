<?php $products = $this->getBestSellerProducts(
	Mage::getStoreConfig('sm_bestseller/display/maximum_quantity_category')) ?>

<?php if ($products->count() > 0) : ?>
	<h2 class="subtitle">Best Sellers</h2>
	<div class="bestseller-swiper-container">
		<div class="swiper-wrapper">
			<?php foreach ($products as $product) : ?>
				<?php $product->load($product->getId()) ?>
				<div class="swiper-slide">
					<div class="inner">
						<a href="<?= Mage::getBaseUrl() . $product->getUrlPath() ?>">
							<img src="<?= $product->getImageUrl() ?>">
						</a>
						<h4 class="product-name"><?= $product->getName() ?></h4>
						<span class="price">
							<?= $this->getCurrentCurrencySymbol() ?><?= $product->getPrice() ?>
						</span>
					</div>
				</div>
			<?php endforeach; ?>
		</div>
	</div>
<?php endif; ?>

<script>
	jQuery(function() {
		var gallery = jQuery('.bestseller-swiper-container').swiper({
			slidesPerView   : 'auto',
			resizeReInit    : true,
			keyboardControl : true,
			grabCursor      : true,
			autoplay        : "<?= Mage::getStoreConfig('sm_bestseller/display/autoplay') ?>",
			speed           : "<?= Mage::getStoreConfig('sm_bestseller/display/speed') ?>"
		});
	});
</script>