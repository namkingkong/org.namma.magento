<?xml version="1.0"?>
<layout>
    <cms_index_index>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>SM/swiper/idangero.swiper.css</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>SM/swiper/idangero.swiper.js</name>
            </action>
        </reference>
        <reference name="content">
            <!--<action method="unsetChildren" ifconfig="sm_slider/status/enabled"/>-->
            <block type="sm_slider/slider"
                   name="sm_slider"
                   before="-">
                <action method="setTemplate" ifconfig="sm_slider/status/enabled">
                    <template>SM/Slider.phtml</template>
                </action>
            </block>
        </reference>
    </cms_index_index>
</layout>