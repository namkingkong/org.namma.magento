<?xml version="1.0"?>

<layout>
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>SM/bootstrap/css/bootstrap.min.css</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>SM/bootstrap/js/bootstrap.min.js</name>
            </action>
            <action method="addItem">
                <type>skin_css</type>
                <name>SM/css/MegaMenu.css</name>
            </action>
        </reference>

        <reference name="header">
            <block type="sm_megamenu/MegaMenu"
                   name="sm_megamenu"
                   template="SM/MegaMenu.phtml"/>

            <action method="unsetChild" ifconfig="sm_megamenu/remove_default_nav/enabled">
                <name>top.menu</name>
            </action>
            <action method="setChild" ifconfig="sm_megamenu/remove_default_nav/enabled">
                <alias>topMenu</alias>
                <block>sm_megamenu</block>
            </action>
        </reference>

